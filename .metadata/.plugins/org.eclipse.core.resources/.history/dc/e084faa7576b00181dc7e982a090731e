	public static int[] readFiles(String file) {
		File f =new File(file);
		Scanner sc = new Scanner(f);
		int count = 0 ;
		
		while(sc.hasNextInt()) {
			count++; // counts the number of elements
			sc.nextInt();
		}
		int [] arr = new int[count];
		Scanner s = new Scanner(f);
		for(int i =0; i<arr.length; i++)
			arr[i]= s.nextInt();
		
		return arr;
	}
}
